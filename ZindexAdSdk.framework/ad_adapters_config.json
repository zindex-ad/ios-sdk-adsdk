{
  "version": "1.0.0",
  "description": "AdSdk 动态适配器配置文件",
  "lastUpdated": "2025-01-27T10:00:00Z",
  "platforms": [
    {
      "name": "funlink",
      "displayName": "FunLink 广告平台",
      "description": "FunLink 移动广告平台，支持多种广告形式",
      "version": "2.8.4.0.0",
      "enabled": true,
      "priority": 1,
      "adapters": [
        {
          "type": "banner",
          "className": "FunLinkBannerAdapter",
          "version": "1.0.0",
          "description": "FunLink 横幅广告适配器",
          "capabilities": [
            "autoRefresh",
            "positionAdjustment",
            "visibilityTracking",
            "customSize"
          ],
          "requirements": {
            "FLAdSaas": "2.8.4.0.0",
            "iOS": "12.0"
          },
          "config": {
            "defaultRefreshInterval": 30,
            "supportedSizes": [
              {"width": 320, "height": 50},
              {"width": 320, "height": 100},
              {"width": 468, "height": 60}
            ],
            "autoRefreshEnabled": true
          }
        },
        {
          "type": "interstitial",
          "className": "FunLinkInterstitialAdapter",
          "version": "1.0.0",
          "description": "FunLink 插屏广告适配器",
          "capabilities": [
            "preload",
            "autoShow",
            "customCloseButton"
          ],
          "requirements": {
            "FLAdSaas": "2.8.4.0.0",
            "iOS": "12.0"
          },
          "config": {
            "preloadEnabled": true,
            "autoShowEnabled": false,
            "closeButtonDelay": 3.0
          }
        },
        {
          "type": "rewarded",
          "className": "FunLinkRewardVideoAdapter",
          "version": "1.0.0",
          "description": "FunLink 激励视频广告适配器",
          "capabilities": [
            "skipAfterTime",
            "customReward",
            "progressTracking"
          ],
          "requirements": {
            "FLAdSaas": "2.8.4.0.0",
            "iOS": "12.0"
          },
          "config": {
            "skipTime": 5.0,
            "rewardType": "virtual_currency",
            "rewardAmount": 100
          }
        }
      ]
    },
    {
      "name": "admob",
      "displayName": "AdMob 广告平台",
      "description": "Google AdMob 移动广告平台",
      "version": "10.0.0",
      "enabled": true,
      "priority": 2,
      "adapters": [
        {
          "type": "banner",
          "className": "AdMobBannerAdapter",
          "version": "1.0.0",
          "description": "AdMob 横幅广告适配器",
          "capabilities": [
            "smartBanner",
            "adaptiveBanner",
            "testMode"
          ],
          "requirements": {
            "GoogleMobileAds": "10.0.0",
            "iOS": "12.0"
          },
          "config": {
            "testMode": false,
            "adaptiveBannerEnabled": true
          }
        }
      ]
    },
    {
      "name": "facebook",
      "displayName": "Facebook 广告平台",
      "description": "Facebook Audience Network 广告平台",
      "version": "6.12.0",
      "enabled": true,
      "priority": 3,
      "adapters": [
        {
          "type": "banner",
          "className": "FacebookBannerAdapter",
          "version": "1.0.0",
          "description": "Facebook 横幅广告适配器",
          "capabilities": [
            "nativeBanner",
            "customSize",
            "placementOptimization"
          ],
          "requirements": {
            "FBAudienceNetwork": "6.12.0",
            "iOS": "12.0"
          },
          "config": {
            "nativeBannerEnabled": true,
            "placementOptimization": true
          }
        }
      ]
    }
  ],
  "globalConfig": {
    "defaultPlatform": "funlink",
    "fallbackEnabled": true,
    "loadTimeout": 10.0,
    "retryCount": 3,
    "retryDelay": 2.0,
    "logging": {
      "enabled": true,
      "level": "info"
    },
    "analytics": {
      "enabled": true,
      "trackingEvents": [
        "ad_load_start",
        "ad_load_success",
        "ad_load_failed",
        "ad_show",
        "ad_click",
        "ad_close"
      ]
    }
  },
  "experimentalFeatures": {
    "dynamicLoading": true,
    "remoteConfig": true,
    "a_bTesting": false
  }
}
